<div ng-controller="entityactioncontroller">
    <h2>@Interface.EntityServiceActionIndex</h2>
    <div class="row">
        <div class="col-md-4">
            <strix-drop-down source="entityServices" option-label="item1" option-value="item2" change-callback="changeSelect"></strix-drop-down>
        </div>
    </div>
    <table id="ServiceActions" class="table">
        <thead>
            <tr>
                <th>
                    @Interface.Service
                </th>
                <th>
                    @Interface.Actions
                </th>
            </tr>
        </thead>
        <tbody ng-repeat="service in servicesToFilter() | filter: filterServices">
            <tr>
                <td rowspan="2">
                    {{ service.service }}
                </td>
                <td ng-repeat="item in selectedType.item3 | filter: { service: service.service}">
                    {{ item.action }}
                </td>
            </tr>
            <tr>
                <td ng-repeat="item in selectedType.item3 | filter: { service: service.service}">
                    <input type="checkbox" class="checkbox" ng-model="item.selected" />
                </td>
            </tr>
        </tbody>
    </table>
    <p>
        <kendo-button ng-click="save()" class="k-primary" ng-disabled="savingServiceData">@DefaultInterface.Save</kendo-button>
    </p>
</div>